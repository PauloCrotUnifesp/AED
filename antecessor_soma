#include <stdio.h>

//Escrever uma funcao que dado um input n fa√ßa a soma de todos os resultados nao negativos ate ele mesmo.

int sum(int n) {
if (n == 0) {
return 0;
} else {
  return n + sum(n - 1);
}
}


int main(void) {
  int n;
  printf("Insira um numero inteiro nao negativo: ");
  scanf("%d", &n);

  if (n < 0) {
printf("\nNumero invalido, insira um numero positivo \n");
    return 1;
  }
  int soma = sum(n);
  printf("A soma dos numeros nao negativos de %d eh %d", n, soma);

  return 0;
}
